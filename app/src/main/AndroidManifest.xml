<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.tombolator">

    <application android:name=".TomboApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_bingo"
            android:label="@string/app_mame"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".tombolas.TombolasActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".media.MediaActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".config.ConfigActivity"
                  android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>