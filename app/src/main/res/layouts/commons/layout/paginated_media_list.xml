<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_sans_ms"
        android:text="@string/paginated_media_list_title_placeholder"
        android:textSize="@dimen/font_size_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/button_sort_by"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/icon_sort_media_content_description"
        android:src="@drawable/ic_sort_by_desc"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view_list"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_media_types"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_labels"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view_list"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/button_previous_page"
        android:layout_width="@dimen/button_extra_small_width"
        android:layout_height="@dimen/button_extra_small_height"
        android:background="@drawable/button_selector_purple"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/button_next_page"
        android:layout_width="@dimen/button_extra_small_width"
        android:layout_height="@dimen/button_extra_small_height"
        android:background="@drawable/button_selector_purple"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/current_page"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_labels"
        app:layout_constraintEnd_toStartOf="@+id/label_page_number_separator"
        app:layout_constraintTop_toBottomOf="@+id/button_previous_page" />

    <TextView
        android:id="@+id/label_page_number_separator"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center"
        android:text="@string/label_separator_slash"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_labels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_previous_page" />

    <TextView
        android:id="@+id/label_page_number_total"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/comic_sans_ms"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_labels"
        app:layout_constraintStart_toEndOf="@+id/label_page_number_separator"
        app:layout_constraintTop_toBottomOf="@+id/button_previous_page" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/button_small_width"
        android:layout_height="@dimen/button_small_height"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_selector_purple"
        android:fontFamily="@font/comic_sans_ms"
        android:padding="25dp"
        android:src="@drawable/ic_arrow_left"
        android:text="@string/button_back"
        android:textSize="@dimen/font_size_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/button_create_new_media"
        android:layout_width="@dimen/button_small_width"
        android:layout_height="@dimen/button_small_height"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_selector_purple"
        android:fontFamily="@font/comic_sans_ms"
        android:padding="25dp"
        android:src="@drawable/ic_add"
        android:text="@string/process_button_text"
        android:textSize="@dimen/font_size_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view_list"
        android:layout_width="330dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toTopOf="@+id/button_previous_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        app:layout_constraintVertical_bias="0.636">

        <LinearLayout
            android:id="@+id/linear_layout_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>