<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/color_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".config.ConfigActivity">
    <Button
            android:background="@drawable/oval_button_design_purple"
            android:text="@string/button_back"
            android:textSize="@dimen/font_size"
            android:fontFamily="@font/comic_sans_ms"
            android:drawableBottom="@drawable/ic_arrow_left_35"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/button_back"
            android:padding="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.975"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_config"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/font_size_titles"
            android:id="@+id/text_view_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.025"/>
    <Button
            android:text="@string/button_reset_media_database"
            android:drawableBottom="@drawable/ic_datenbank"
            android:padding="25dp"
            android:layout_width="@dimen/button_big_width"
            android:layout_height="@dimen/button_big_height"
            android:id="@+id/button_reset_media"
            android:background="@drawable/oval_button_design_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/button_export"/>
    <Button
            android:text="@string/button_export_database"
            android:drawableBottom="@drawable/ic_datenbank"
            android:padding="25dp"
            android:layout_width="@dimen/button_big_width"
            android:layout_height="@dimen/button_big_height"
            android:id="@+id/button_export"
            android:background="@drawable/oval_button_design_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>