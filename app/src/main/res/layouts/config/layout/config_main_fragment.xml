<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".config.ConfigActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/button_small_width"
        android:layout_height="@dimen/button_small_height"
        android:background="@drawable/oval_button_design_purple"
        android:fontFamily="@font/comic_sans_ms"
        android:padding="25dp"
        android:src="@drawable/ic_arrow_left"
        android:text="@string/button_back"
        android:textSize="@dimen/font_size_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_sans_ms"
        android:text="@string/title_config"
        android:textSize="@dimen/font_size_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/button_import"
        android:layout_width="@dimen/button_big_width"
        android:layout_height="@dimen/button_big_height"
        android:layout_marginTop="24dp"
        android:background="@drawable/oval_button_design_purple"
        android:drawableBottom="@drawable/ic_datenbank"
        android:fontFamily="@font/comic_sans_ms"
        android:padding="25dp"
        android:text="@string/button_load_database_backup"
        android:textSize="@dimen/font_size_s"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_export_version" />

    <Button
        android:id="@+id/button_export"
        android:layout_width="@dimen/button_big_width"
        android:layout_height="@dimen/button_big_height"
        android:layout_marginTop="40dp"
        android:background="@drawable/oval_button_design_purple"
        android:drawableBottom="@drawable/ic_datenbank"
        android:fontFamily="@font/comic_sans_ms"
        android:padding="25dp"
        android:text="@string/button_save_database_backup"
        android:textSize="@dimen/font_size_s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/comic_sans_ms"
        android:text="@string/label_export_version"
        android:textSize="@dimen/font_size_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_export" />

    <TextView
        android:id="@+id/text_view_export_version"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_sans_ms"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>