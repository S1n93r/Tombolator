<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        tools:context=".tombolas.TombolaCreationFragmentStepTwo"
>

    <ImageView
            android:src="@drawable/ic_sort_by_desc"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/button_sort_by"
            android:layout_marginStart="40dp"
            android:contentDescription="@string/icon_sort_media_content_description"
            app:layout_constraintBottom_toTopOf="@+id/scroll_view_list"
            app:layout_constraintStart_toStartOf="parent"
    />
    <Spinner
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_labels"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:id="@+id/spinner_media_types"
            android:layout_marginEnd="40dp"
            app:layout_constraintBottom_toTopOf="@+id/scroll_view_list"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:padding="12dp"
            android:layout_width="@dimen/button_extra_small_width"
            android:layout_height="@dimen/button_extra_small_height"
            android:id="@+id/button_previous_page"
            android:background="@drawable/button_selector_purple"
            android:drawableBottom="@drawable/ic_arrow_left_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.85"
    />
    <Button
            android:padding="12dp"
            android:layout_width="@dimen/button_extra_small_width"
            android:layout_height="@dimen/button_extra_small_height"
            android:id="@+id/button_next_page"
            android:background="@drawable/button_selector_purple"
            android:drawableBottom="@drawable/ic_arrow_right_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintVertical_bias="0.85"
    />
    <TextView
            android:textSize="@dimen/font_size_labels"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/label_page_number_current"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/comic_sans_ms"
            app:layout_constraintTop_toBottomOf="@+id/button_previous_page"
            app:layout_constraintEnd_toStartOf="@+id/label_page_number_separator"/>
    <TextView
            android:text="@string/label_separator_slash"
            android:textSize="@dimen/font_size_labels"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/label_page_number_separator"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/comic_sans_ms"
            app:layout_constraintTop_toBottomOf="@+id/button_previous_page"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:textSize="@dimen/font_size_labels"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/label_page_number_total"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/comic_sans_ms"
            app:layout_constraintTop_toBottomOf="@+id/button_previous_page"
            app:layout_constraintStart_toEndOf="@+id/label_page_number_separator"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_new_Tombola"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/font_size_title"
            android:id="@+id/text_view_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.023"
    />
    <Button
            android:background="@drawable/button_selector_purple"
            android:text="@string/button_back"
            android:textSize="@dimen/font_size_s"
            android:fontFamily="@font/comic_sans_ms"
            android:drawableBottom="@drawable/ic_arrow_left_35"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/back_button"
            android:padding="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="12dp"
    />
    <Button
            android:id="@+id/button_new_media"
            android:background="@drawable/button_selector_purple"
            android:drawableBottom="@drawable/ic_floppy_disk_35"
            android:text="@string/button_save"
            android:textSize="@dimen/font_size_s"
            android:fontFamily="@font/comic_sans_ms"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:padding="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <ScrollView
            android:layout_width="330dp"
            android:layout_height="450dp"
            android:id="@+id/scroll_view_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintBottom_toTopOf="@+id/button_previous_page"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"
            app:layout_constraintVertical_bias="0.636">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout_media"
        />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>