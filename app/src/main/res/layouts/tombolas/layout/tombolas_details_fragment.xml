<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/color_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tombolas.TombolaDetailsFragment">
    <Button
            android:drawableBottom="@drawable/ic_bingo_25"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:layout_width="@dimen/button_medium_width"
            android:layout_height="@dimen/button_medium_height"
            android:id="@+id/button_draw"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_draw"
            android:textSize="@dimen/font_size_s"
            android:layout_marginBottom="125dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
    />
    <Button
            android:drawableBottom="@drawable/ic_pencil_25"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:layout_width="@dimen/button_medium_width"
            android:layout_height="@dimen/button_medium_height"
            android:id="@+id/button_edit_tombola"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_edit"
            android:textSize="@dimen/font_size_s"
            android:layout_marginBottom="125dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tombola_details"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_title"
            android:id="@+id/text_view_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.025"/>
    <Button
            android:text="@string/button_back"
            android:drawableBottom="@drawable/ic_arrow_left_35"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/back_button"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_s"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/button_delete"
            android:drawableBottom="@drawable/ic_delete_35"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/button_delete"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_s"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/name_label"
            android:text="@string/label_name"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/name_value"
            android:text="@string/label_name"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toEndOf="@+id/name_label"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/created_at_label"
            android:text="@string/label_created_at"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/name_label"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_all_label"
            android:text="@string/label_media_all"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/created_at_label"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_available_label"
            android:text="@string/label_media_available"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/media_all_label"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_drawn_label"
            android:text="@string/label_media_drawn"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/media_available_label"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_drawn_label2"
            android:text="@string/lable_media_type"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/media_drawn_label"/>
    <Spinner
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/spinner_tombola_type"
            app:layout_constraintStart_toEndOf="@+id/media_drawn_label2"
            app:layout_constraintTop_toBottomOf="@+id/media_drawn_value"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/created_at_value"
            android:text="@string/label_created_at"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/created_at_label"
            app:layout_constraintTop_toBottomOf="@+id/name_value"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_all_value"
            android:text="@string/label_media_all"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/media_all_label"
            app:layout_constraintTop_toBottomOf="@+id/created_at_value"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_available_value"
            android:text="@string/label_media_available"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/media_available_label"
            app:layout_constraintTop_toBottomOf="@+id/media_all_value"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/media_drawn_value"
            android:text="@string/label_media_drawn"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/media_drawn_label"
            app:layout_constraintTop_toBottomOf="@+id/media_available_value"/>

</androidx.constraintlayout.widget.ConstraintLayout>