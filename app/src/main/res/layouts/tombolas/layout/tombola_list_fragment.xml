<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/color_background"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
             tools:context=".tombolas.TombolaMainFragment">

    <Button
            android:padding="20dp"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_small_height"
            android:id="@+id/button_previous_page2"
            android:background="@drawable/button_selector_purple"
            android:drawableBottom="@drawable/ic_arrow_left_25"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_next_or_prev_page"
            android:textSize="@dimen/font_size_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.83"/>
    <Button
            android:padding="20dp"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_small_height"
            android:id="@+id/button_next_page2"
            android:background="@drawable/button_selector_purple"
            android:drawableBottom="@drawable/ic_arrow_right_25"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_next_or_prev_page"
            android:textSize="@dimen/font_size_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintVertical_bias="0.83"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/label_search"
            android:autofillHints="@string/label_search"
            android:textSize="@dimen/font_size_labels"
            android:fontFamily="@font/comic_sans_ms"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.12"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tombolas"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/font_size_title"
            android:id="@+id/text_view_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.025"/>
    <Button
            android:id="@+id/button_back"
            android:background="@drawable/button_selector_purple"
            android:drawableBottom="@drawable/ic_arrow_left_35"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="12sp"
            android:padding="25dp"
            android:text="@string/button_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"/>
    <Button
            android:id="@+id/button_new_tombola"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_s"
            android:padding="25dp"
            android:text="@string/button_new"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:drawableBottom="@drawable/ic_add_35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"/>
    <ScrollView
            android:layout_width="330dp"
            android:layout_height="410dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout_tombolas"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>