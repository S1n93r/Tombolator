<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/color_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".media.MediaDetailsFragment">
    <Button
            android:drawableBottom="@drawable/ic_pencil_25"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:layout_width="@dimen/button_medium_width"
            android:layout_height="@dimen/button_medium_height"
            android:id="@+id/button_edit_media"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_edit"
            android:textSize="@dimen/font_size_s"
            android:layout_marginBottom="125dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_media_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_title"
            android:id="@+id/text_view_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.025"/>
    <Button
            android:text="@string/button_back"
            android:drawableBottom="@drawable/ic_arrow_left_35"
            android:padding="25dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/button_back"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"/>
    <Button
            android:text="@string/button_delete"
            android:drawableBottom="@drawable/ic_delete_35"
            android:padding="25dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:id="@+id/button_delete"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_s"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/name_label"
            android:autofillHints="@string/label_name"
            android:text="@string/label_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/id_label"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/name_value"
            android:text="@string/label_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/id_value"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/edit_text_number"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/label_number"
            app:layout_constraintTop_toBottomOf="@+id/name_label"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/number_value"
            android:text="@string/label_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/name_value"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/spinner_media_types"
            android:text="@string/label_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/title_label"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/created_at_label"
            android:text="@string/label_created_at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/spinner_media_types"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/id_label"
            android:text="@string/label_id"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/created_at_value"
            android:text="@string/label_created_at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/type_value"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/id_value"
            android:text="@string/label_id"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/type_value"
            android:text="@string/label_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/title_value"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/title_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/label_title"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_number"
            android:layout_marginTop="16dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:id="@+id/title_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints="@string/label_name"
            android:text="@string/label_title"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/number_value"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>