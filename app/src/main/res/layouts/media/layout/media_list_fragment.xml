<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        tools:context=".media.MediaListFragment"
>

    <com.example.tombolator.commons.PaginatedMediaList
            android:id="@+id/paginated_media_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:elementsPerPage="6"
            app:title="@string/title_media"
            app:processButtonText="@string/button_new"
            app:processButtonIcon="@drawable/ic_floppy_disk_35"
            app:mode="single_select_show_details"
    />

</androidx.constraintlayout.widget.ConstraintLayout>