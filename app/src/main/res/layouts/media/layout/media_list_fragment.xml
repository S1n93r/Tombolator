<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".media.MediaListFragment">

    <com.example.tombolator.media.PaginatedMediaList
        android:id="@+id/paginated_media_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:elementsPerPage="6"
        app:mode="single_select_show_details"
        app:processButtonIcon="@drawable/ic_floppy_disk_35"
        app:processButtonText="@string/button_new"
        app:title="@string/title_media" />

</androidx.constraintlayout.widget.ConstraintLayout>