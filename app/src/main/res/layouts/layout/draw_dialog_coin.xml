<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="350dp"
>

    <View android:id="@+id/coin"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:background="@drawable/oval_button_design_purple"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:id="@+id/icon_media_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/icon_media_type_content_description"
            app:layout_constraintStart_toStartOf="@+id/label_content"
            app:layout_constraintEnd_toEndOf="@+id/label_content"
            app:layout_constraintBottom_toTopOf="@+id/label_content"/>
    <TextView
            android:text="@string/text_view_content"
            android:gravity="center_horizontal"
            android:layout_width="153dp"
            android:layout_height="111dp"
            android:id="@+id/label_content"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_labels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.539"/>

</androidx.constraintlayout.widget.ConstraintLayout>