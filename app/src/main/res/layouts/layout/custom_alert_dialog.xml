<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="350dp"
                                                   android:layout_height="300dp"
                                                   android:background="@drawable/rectangle_purple">
    <TextView android:id="@+id/alert_title"
              android:layout_width="300dp"
              android:layout_height="50dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:fontFamily="@font/comic_sans_ms"
              android:textSize="@dimen/font_size_xl"
              android:textAlignment="center"
              android:layout_marginTop="16dp"
              app:layout_constraintHorizontal_bias="0.5"/>
    <TextView android:id="@+id/alert_message"
              android:layout_width="300dp"
              android:layout_height="100dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:fontFamily="@font/comic_sans_ms"
              android:textSize="@dimen/font_size_l"
              android:textAlignment="center"
              app:layout_constraintHorizontal_bias="0.47"
              app:layout_constraintTop_toBottomOf="@+id/alert_title"
              android:layout_marginTop="16dp"/>
    <Button android:id="@+id/alert_button_deny"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_deny" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <Button android:id="@+id/alert_button_accept"
            android:layout_width="100dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:text="@string/button_accept" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>