<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="350dp"
>

    <View
            android:id="@+id/cover_one"
            android:layout_width="125dp"
            android:layout_height="190dp"
            android:background="@color/color_button_stroke_dark"
            android:transformPivotX="120dp"
            android:transformPivotY="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintVertical_bias="0.520"/>
    <View
            android:id="@+id/cover_two"
            android:layout_width="125dp"
            android:layout_height="190dp"
            android:background="@color/color_button_stroke_dark"
            android:transformPivotX="0dp"
            android:transformPivotY="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/page_one"
            app:layout_constraintVertical_bias="0.520"/>
    <View
            android:id="@+id/page_one_d"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="120dp"
            android:transformPivotY="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintVertical_bias="0.540"/>
    <View
            android:id="@+id/page_two_d"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="0dp"
            android:transformPivotY="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/page_one"
            app:layout_constraintVertical_bias="0.540"/>
    <View
            android:id="@+id/page_one_c"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="120dp"
            android:transformPivotY="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintVertical_bias="0.530"/>
    <View
            android:id="@+id/page_two_c"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="0dp"
            android:transformPivotY="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/page_one"
            app:layout_constraintVertical_bias="0.530"/>
    <View
            android:id="@+id/page_one_b"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="120dp"
            android:transformPivotY="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintVertical_bias="0.520"/>
    <View
            android:id="@+id/page_two_b"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="0dp"
            android:transformPivotY="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/page_one"
            app:layout_constraintVertical_bias="0.520"/>
    <View
            android:id="@+id/page_one_a"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="120dp"
            android:transformPivotY="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintVertical_bias="0.510"/>
    <View
            android:id="@+id/page_two_a"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:background="@drawable/rectangle_thin_lines_purple"
            android:transformPivotX="0dp"
            android:transformPivotY="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/page_one"
            app:layout_constraintVertical_bias="0.510"/>
    <TextView
          android:id="@+id/page_one"
          android:text="@string/text_draw_book_page_one"
          android:fontFamily="@font/comic_sans_ms"
          android:textSize="@dimen/font_size_xxs"
          android:textColor="@color/color_button_stroke"
          android:padding="15dp"
          android:layout_width="120dp"
          android:layout_height="180dp"
          android:background="@drawable/rectangle_thin_lines_purple"
          android:transformPivotX="120dp"
          android:transformPivotY="90dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.221"/>
    <TextView
          android:id="@+id/page_two"
          android:text="@string/text_draw_book_page_two"
          android:fontFamily="@font/comic_sans_ms"
          android:textSize="@dimen/font_size_xxs"
          android:textColor="@color/color_button_stroke"
          android:padding="15dp"
          android:layout_width="120dp"
          android:layout_height="180dp"
          android:background="@drawable/rectangle_thin_lines_purple"
          android:transformPivotX="0dp"
          android:transformPivotY="90dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/page_one"/>
    <ImageView
            android:id="@+id/icon_media_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/icon_media_type_content_description"
            app:layout_constraintStart_toStartOf="@+id/label_content"
            app:layout_constraintEnd_toEndOf="@+id/label_content"
            app:layout_constraintBottom_toTopOf="@+id/label_content"/>
    <TextView
            android:text="@string/text_view_content"
            android:gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:id="@+id/label_content"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_labels"
            app:layout_constraintStart_toStartOf="@+id/page_one"
            app:layout_constraintEnd_toEndOf="@+id/page_two"
            app:layout_constraintBottom_toBottomOf="@+id/page_one"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>