<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".RootActivity">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_sans_ms"
        android:text="@string/app_mame"
        android:textSize="@dimen/font_size_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <ImageView
        android:id="@+id/button_tombolas"
        android:layout_width="@dimen/button_big_width"
        android:layout_height="@dimen/button_big_height"
        android:background="@drawable/button_selector_purple"
        android:padding="40dp"
        android:src="@drawable/ic_bingo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/button_media"
        android:layout_width="@dimen/button_big_width"
        android:layout_height="@dimen/button_big_height"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_selector_purple"
        android:padding="40dp"
        android:src="@drawable/ic_cassette"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_tombolas" />

    <ImageView
        android:id="@+id/button_config"
        android:layout_width="@dimen/button_big_width"
        android:layout_height="@dimen/button_big_height"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_selector_purple"
        android:padding="40dp"
        android:src="@drawable/ic_configuration"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_media" />


</androidx.constraintlayout.widget.ConstraintLayout>