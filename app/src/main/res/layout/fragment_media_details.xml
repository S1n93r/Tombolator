<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/color_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".media.MediaDetailsFragment">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_media_details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="36sp"
            android:id="@+id/text_view_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.05"/>
    <Button
            android:text="@string/button_back"
            android:drawableBottom="@drawable/ic_arrow"
            android:padding="25dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/button_back"
            android:background="@drawable/oval_button_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"/>
    <Button
            android:text="@string/button_delete"
            android:drawableBottom="@drawable/ic_delete"
            android:padding="25dp"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/button_delete"
            android:background="@drawable/oval_button_purple"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/name_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp"
            android:autofillHints="@string/label_name"
            android:text="@string/label_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/name_value"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp"
            android:text="@string/label_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/number_label"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/label_number"
            app:layout_constraintTop_toBottomOf="@+id/name_label"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/number_value"
            android:text="@string/label_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/name_value"
            android:layout_marginTop="32dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/type_label"
            android:text="@string/label_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/title_label"
            android:layout_marginTop="32dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/created_at_label"
            android:text="@string/label_created_at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/type_label"
            android:layout_marginTop="32dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/created_at_value"
            android:text="@string/label_created_at"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/type_value"
            android:layout_marginTop="32dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/type_value"
            android:text="@string/label_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/title_value"
            android:layout_marginTop="32dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/title_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/label_title"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toBottomOf="@+id/number_label"
            android:layout_marginTop="32dp"/>
    <TextView
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/title_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints="@string/label_name"
            android:text="@string/label_title"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintTop_toBottomOf="@+id/number_value"
            android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>