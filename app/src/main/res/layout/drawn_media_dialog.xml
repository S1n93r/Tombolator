<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/oval_button_design_purple">

    <ImageView
            android:id="@+id/icon_media_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/icon_media_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/label_content"
            android:layout_marginBottom="12dp"/>
    <TextView
            android:text="@string/text_view_content"
            android:gravity="center_horizontal"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:id="@+id/label_content"
            android:fontFamily="@font/comic_sans_ms"
            android:textSize="@dimen/font_size_labels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>